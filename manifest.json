{
  "manifest_version": 3,
  "name": "Cogni-llama",
  "version": "1.0",
  "description": "Enhances web accessibility by simplifying text content using Together AI's Llama 4 model",
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "images/icon16.png",
      "48": "images/icon48.png",
      "128": "images/icon128.png"
    }
  },
  "permissions": [
    "activeTab",
    "storage",
    "scripting",
    "commands",
    "tabs"
  ],
  "host_permissions": [
    "https://api.together.xyz/*",
    "<all_urls>"
  ],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js", "slider.js"],
      "css": ["content.css", "fonts.css", "slider.css"],
      "run_at": "document_end"
    }
  ],
  "commands": {
    "toggle-slider": {
      "suggested_key": {
        "default": "Ctrl+Shift+L",
        "mac": "Cmd+Shift+L"
      },
      "description": "Toggle the CogniLLaMA configuration slider"
    }
  },
  "options_page": "options.html",
  "background": {
    "service_worker": "background.js"
  },
  "web_accessible_resources": [{
    "resources": ["fonts/*", "config.js", "popup.html", "popup.js", "popup.css", "slider.css", "images/*"],
    "matches": ["<all_urls>"]
  }]
}
